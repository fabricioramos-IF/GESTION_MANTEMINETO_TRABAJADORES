@{
    ViewData["Title"] = "Inicio";
}

<style>
.home-wrapper {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
    min-height: 100%;
    flex: 1;
    padding-bottom: 3rem;
    position: relative;
}
    .home-wrapper::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 50%, rgba(99, 102, 241, 0.15) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(14, 165, 233, 0.15) 0%, transparent 50%),
            radial-gradient(circle at 40% 80%, rgba(168, 85, 247, 0.1) 0%, transparent 50%);
        pointer-events: none;
    }
    .home-wrapper::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        opacity: 0.5;
        pointer-events: none;
    }
    
    .hero-section {
        padding: 4rem 2rem 6rem;
        color: white;
        position: relative;
        z-index: 1;
    }
    .hero-icon {
        width: 80px;
        height: 80px;
        background: rgba(255,255,255,0.1);
        backdrop-filter: blur(10px);
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        border: 1px solid rgba(255,255,255,0.2);
    }
    .hero-icon i {
        font-size: 2.2rem;
        background: linear-gradient(135deg, #60a5fa 0%, #a78bfa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .tech-badge {
        background: rgba(255,255,255,0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.3);
        color: white;
        padding: 0.4rem 0.9rem;
        border-radius: 20px;
        font-size: 0.8rem;
        display: inline-flex;
        align-items: center;
        margin: 0.2rem;
        transition: all 0.3s ease;
    }
    .tech-badge:hover {
        background: rgba(255,255,255,0.2);
        transform: translateY(-2px);
    }
    .tech-badge i {
        margin-right: 0.4rem;
    }
    
    .main-card-container {
        position: relative;
        z-index: 10;
        padding: 0 1rem;
    }
    .main-card {
        border-radius: 20px;
        border: none;
        overflow: hidden;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4);
        max-width: 900px;
        margin: 0 auto;
    }
    .main-card-left {
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
        padding: 3rem 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        position: relative;
        min-height: 350px;
    }
    .main-card-left::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3z' fill='%23ffffff' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
    }
    .main-card-left-content {
        position: relative;
        z-index: 1;
    }
    .module-icon {
        width: 70px;
        height: 70px;
        background: rgba(255,255,255,0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.2rem;
        font-size: 1.8rem;
    }
    .module-divider {
        width: 40px;
        height: 3px;
        background: rgba(255,255,255,0.5);
        margin: 0.8rem auto 0;
        border-radius: 2px;
    }
    .main-card-right {
        padding: 2.5rem;
        background: #fff;
    }
    .feature-item {
        display: flex;
        align-items: center;
        margin-bottom: 0.9rem;
        padding: 0.3rem 0;
    }
    .feature-item i {
        width: 22px;
        height: 22px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.7rem;
        margin-right: 0.9rem;
        flex-shrink: 0;
    }
    .feature-item span {
        color: #4b5563;
        font-size: 0.95rem;
    }
    .btn-access {
        background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
        border: none;
        padding: 0.9rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        color: white;
        width: 100%;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
        font-size: 0.95rem;
    }
    .btn-access:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(245, 158, 11, 0.4);
        color: white;
    }
    
    .footer-home {
        position: relative;
        z-index: 1;
        text-align: center;
        padding: 2rem 1rem;
        color: rgba(255,255,255,0.6);
    }
    .footer-home a {
        color: #60a5fa;
        text-decoration: none;
        transition: color 0.3s;
    }
    .footer-home a:hover {
        color: #93c5fd;
    }
    
    @@media (max-width: 768px) {
        .hero-section {
            padding: 3rem 1rem 4rem;
        }
        .hero-section h1 {
            font-size: 1.75rem;
        }
        .main-card-left {
            min-height: auto;
            padding: 2rem;
        }
        .main-card-right {
            padding: 2rem;
        }
    }
</style>

<div class="home-wrapper">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="text-center">
            <div class="hero-icon">
                <i class="bi bi-building-fill-gear"></i>
            </div>
            <h1 class="display-5 fw-bold mb-3">Sistema de Gestion de Trabajadores</h1>
            <p class="lead mb-4 opacity-75" style="max-width: 600px; margin: 0 auto; font-size: 1rem;">
                Plataforma integral para la administracion eficiente del personal de tu empresa
            </p>
            <div class="mt-4 d-flex flex-wrap justify-content-center gap-2">
                <span class="tech-badge">
                    <i class="bi bi-filetype-cs"></i>.NET 8
                </span>
                <span class="tech-badge">
                    <i class="bi bi-database-fill"></i>SQL Server
                </span>
                <span class="tech-badge">
                    <i class="bi bi-bootstrap-fill"></i>Bootstrap 5
                </span>
                <span class="tech-badge">
                    <i class="bi bi-layers-fill"></i>Entity Framework
                </span>
            </div>
        </div>
    </div>

    <!-- Card Principal -->
    <div class="main-card-container">
        <div class="card main-card">
            <div class="row g-0">
                <div class="col-lg-5">
                    <div class="main-card-left h-100">
                        <div class="main-card-left-content">
                            <div class="module-icon">
                                <i class="bi bi-people-fill"></i>
                            </div>
                            <h5 class="mb-0 opacity-75">Modulo de</h5>
                            <h2 class="fw-bold">Trabajadores</h2>
                            <div class="module-divider"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="main-card-right h-100">
                        <h4 class="fw-bold mb-4" style="color: #1e293b;">Gestion Completa de Personal</h4>
                        <div class="feature-item">
                            <i class="bi bi-check"></i>
                            <span>Registro de trabajadores con fotografia</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check"></i>
                            <span>Edicion y actualizacion de datos</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check"></i>
                            <span>Filtros avanzados por sexo</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check"></i>
                            <span>Validaciones de edad y documento</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check"></i>
                            <span>Indicadores visuales por genero</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check"></i>
                            <span>Interfaz responsive y moderna</span>
                        </div>
                        <a asp-controller="Trabajador" asp-action="Index" class="btn btn-access mt-3">
                            Acceder al Modulo <i class="bi bi-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
