@model List<Trabajadores.Web.Models.Trabajador>
@{
    ViewData["Title"] = "Gestión de Trabajadores";
    var filtroActual = ViewBag.FiltroSexo as string;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-people-fill me-2"></i>Listado de Trabajadores
        </h2>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalTrabajador" onclick="abrirModalCrear()">
            <i class="bi bi-plus-circle me-1"></i> Nuevo Trabajador
        </button>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <span class="fw-bold">Total de registros: @Model.Count</span>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-end align-items-center gap-2">
                        <label class="mb-0">Filtrar por sexo:</label>
                        <select id="filtroSexo" class="form-select form-select-sm" style="width: auto;" onchange="filtrarPorSexo()">
                            <option value="">Todos</option>
                            <option value="M" @(filtroActual == "M" ? "selected" : "")>Masculino</option>
                            <option value="F" @(filtroActual == "F" ? "selected" : "")>Femenino</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 60px;">Foto</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Tipo Doc.</th>
                            <th>Nro. Documento</th>
                            <th>Sexo</th>
                            <th>Fecha Nacimiento</th>
                            <th>Dirección</th>
                            <th style="width: 120px;" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var trabajador in Model)
                            {
                                var rowClass = trabajador.Sexo == "M" ? "table-primary" : "table-warning";
                                <tr class="@rowClass">
                                    <td>
                                        @if (!string.IsNullOrEmpty(trabajador.Foto))
                                        {
                                            <img src="@trabajador.Foto" alt="Foto" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="bi bi-person-fill text-white"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>@trabajador.Nombres</td>
                                    <td>@trabajador.Apellidos</td>
                                    <td>@trabajador.TipoDocumento</td>
                                    <td>@trabajador.NumeroDocumento</td>
                                    <td>
                                        <span class="badge @(trabajador.Sexo == "M" ? "bg-primary" : "bg-warning text-dark")">
                                            @(trabajador.Sexo == "M" ? "Masculino" : "Femenino")
                                        </span>
                                    </td>
                                    <td>@trabajador.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                                    <td>@(trabajador.Direccion ?? "-")</td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-outline-primary me-1" 
                                                onclick="abrirModalEditar(@trabajador.IdTrabajador)" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                onclick="confirmarEliminar(@trabajador.IdTrabajador, '@trabajador.Nombres @trabajador.Apellidos')" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-4 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    No hay trabajadores registrados
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crear/Editar Trabajador -->
<div class="modal fade" id="modalTrabajador" tabindex="-1" aria-labelledby="modalTrabajadorLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalTrabajadorLabel">
                    <i class="bi bi-person-plus-fill me-2"></i><span id="tituloModal">Nuevo Trabajador</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <form id="formTrabajador" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" id="idTrabajador" name="IdTrabajador" value="0" />
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="nombres" class="form-label">Nombres <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="nombres" name="Nombres" required maxlength="100" />
                        </div>
                        <div class="col-md-6">
                            <label for="apellidos" class="form-label">Apellidos <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="apellidos" name="Apellidos" required maxlength="100" />
                        </div>
                        <div class="col-md-6">
                            <label for="tipoDocumento" class="form-label">Tipo de Documento <span class="text-danger">*</span></label>
                            <select class="form-select" id="tipoDocumento" name="TipoDocumento" required>
                                <option value="">Seleccione...</option>
                                <option value="DNI">DNI</option>
                                <option value="RUC">RUC</option>
                                <option value="Pasaporte">Pasaporte</option>
                                <option value="Carnet Ext.">Carnet de Extranjería</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="numeroDocumento" class="form-label">Número de Documento <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="numeroDocumento" name="NumeroDocumento" required maxlength="20" />
                        </div>
                        <div class="col-md-6">
                            <label for="sexo" class="form-label">Sexo <span class="text-danger">*</span></label>
                            <select class="form-select" id="sexo" name="Sexo" required>
                                <option value="">Seleccione...</option>
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="fechaNacimiento" class="form-label">Fecha de Nacimiento <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="fechaNacimiento" name="FechaNacimiento" required />
                        </div>
                        <div class="col-md-6">
                            <label for="foto" class="form-label">Fotografía</label>
                            <input type="file" class="form-control" id="foto" name="FotoArchivo" accept=".jpg,.jpeg,.png" />
                            <small class="text-muted">Formatos: JPG, PNG. Máximo: 2MB</small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Vista previa</label>
                            <div id="previewContainer" class="border rounded p-2 text-center" style="min-height: 100px;">
                                <img id="previewImagen" src="" alt="Vista previa" class="img-thumbnail d-none" style="max-height: 80px;" />
                                <span id="sinImagen" class="text-muted"><i class="bi bi-image fs-2"></i><br/>Sin imagen</span>
                            </div>
                        </div>
                        <div class="col-12">
                            <label for="direccion" class="form-label">Dirección</label>
                            <textarea class="form-control" id="direccion" name="Direccion" rows="2" maxlength="200"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary" id="btnGuardar">
                        <i class="bi bi-check-circle me-1"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Confirmar Eliminación -->
<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="modalEliminarLabel">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">¿Está seguro de eliminar el registro?</p>
                <p class="fw-bold text-danger" id="nombreEliminar"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="btnConfirmarEliminar">
                    <i class="bi bi-trash me-1"></i>Eliminar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Toast de notificaciones -->
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="toastNotificacion" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header" id="toastHeader">
            <strong class="me-auto" id="toastTitulo">Notificación</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Cerrar"></button>
        </div>
        <div class="toast-body" id="toastMensaje"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let idEliminar = 0;
        let modoEdicion = false;

        // Filtrar por sexo
        function filtrarPorSexo() {
            const sexo = document.getElementById('filtroSexo').value;
            const url = sexo ? `@Url.Action("Index", "Trabajador")?sexo=${sexo}` : '@Url.Action("Index", "Trabajador")';
            window.location.href = url;
        }

        // Vista previa de imagen
        document.getElementById('foto').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('previewImagen').src = e.target.result;
                    document.getElementById('previewImagen').classList.remove('d-none');
                    document.getElementById('sinImagen').classList.add('d-none');
                };
                reader.readAsDataURL(file);
            }
        });

        // Abrir modal para crear
        function abrirModalCrear() {
            modoEdicion = false;
            document.getElementById('tituloModal').textContent = 'Nuevo Trabajador';
            document.getElementById('formTrabajador').reset();
            document.getElementById('idTrabajador').value = '0';
            document.getElementById('previewImagen').classList.add('d-none');
            document.getElementById('sinImagen').classList.remove('d-none');
        }

        // Abrir modal para editar
        async function abrirModalEditar(id) {
            modoEdicion = true;
            document.getElementById('tituloModal').textContent = 'Editar Trabajador';
            
            try {
                const response = await fetch(`@Url.Action("Obtener", "Trabajador")/${id}`);
                if (!response.ok) throw new Error('Error al obtener datos');
                
                const data = await response.json();
                
                document.getElementById('idTrabajador').value = data.idTrabajador;
                document.getElementById('nombres').value = data.nombres;
                document.getElementById('apellidos').value = data.apellidos;
                document.getElementById('tipoDocumento').value = data.tipoDocumento;
                document.getElementById('numeroDocumento').value = data.numeroDocumento;
                document.getElementById('sexo').value = data.sexo;
                document.getElementById('fechaNacimiento').value = data.fechaNacimiento.split('T')[0];
                document.getElementById('direccion').value = data.direccion || '';
                
                if (data.fotoUrl) {
                    document.getElementById('previewImagen').src = data.fotoUrl;
                    document.getElementById('previewImagen').classList.remove('d-none');
                    document.getElementById('sinImagen').classList.add('d-none');
                } else {
                    document.getElementById('previewImagen').classList.add('d-none');
                    document.getElementById('sinImagen').classList.remove('d-none');
                }
                
                const modal = new bootstrap.Modal(document.getElementById('modalTrabajador'));
                modal.show();
            } catch (error) {
                mostrarNotificacion('Error', 'No se pudo cargar la información del trabajador', false);
            }
        }

        // Confirmar eliminación
        function confirmarEliminar(id, nombre) {
            idEliminar = id;
            document.getElementById('nombreEliminar').textContent = nombre;
            const modal = new bootstrap.Modal(document.getElementById('modalEliminar'));
            modal.show();
        }

        // Ejecutar eliminación
        document.getElementById('btnConfirmarEliminar').addEventListener('click', async function() {
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                
                const response = await fetch('@Url.Action("Eliminar", "Trabajador")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body: `id=${idEliminar}`
                });
                
                const data = await response.json();
                
                bootstrap.Modal.getInstance(document.getElementById('modalEliminar')).hide();
                
                if (data.exito) {
                    mostrarNotificacion('Éxito', data.mensaje, true);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    mostrarNotificacion('Error', data.mensaje, false);
                }
            } catch (error) {
                mostrarNotificacion('Error', 'Ocurrió un error al eliminar', false);
            }
        });

        // Enviar formulario
        document.getElementById('formTrabajador').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const url = modoEdicion ? '@Url.Action("Editar", "Trabajador")' : '@Url.Action("Crear", "Trabajador")';
            
            try {
                const response = await fetch(url, {
                    method: 'POST',
                    body: formData
                });
                
                const data = await response.json();
                
                if (data.exito) {
                    bootstrap.Modal.getInstance(document.getElementById('modalTrabajador')).hide();
                    mostrarNotificacion('Éxito', data.mensaje, true);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    mostrarNotificacion('Error', data.mensaje, false);
                }
            } catch (error) {
                mostrarNotificacion('Error', 'Ocurrió un error al guardar', false);
            }
        });

        // Mostrar notificación toast
        function mostrarNotificacion(titulo, mensaje, exito) {
            const toast = document.getElementById('toastNotificacion');
            const header = document.getElementById('toastHeader');
            
            header.className = exito ? 'toast-header bg-success text-white' : 'toast-header bg-danger text-white';
            document.getElementById('toastTitulo').textContent = titulo;
            document.getElementById('toastMensaje').textContent = mensaje;
            
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
        }
    </script>
}
